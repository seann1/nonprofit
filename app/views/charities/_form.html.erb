<%= form_for @charity do |f| %>
<div class="form-group">
  <%= f.label "Name" %>
  <%= f.text_field :name, class: "form-control"%>
</div>
<div class="form-group">
  <%= f.label "Description" %>
  <%= f.text_area :description, class: "form-control" %>
</div>
<%= f.submit(:class => "btn btn-primary") %>
<% end %>
